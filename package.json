{
  "name": "probable-engine",
  "private": true,
  "scripts": {
    "lint": "tslint './src/**/*.{ts,tsx}' --project tsconfig.json -c config/tslint.yaml",
    "format": "prettier --write",
    "build": "yarn build:client && yarn build:server",
    "build:client": "webpack --config ./config/webpack.config.client.js",
    "build:server": "webpack --config ./config/webpack.config.server.js && ./scripts/build/packageJSON.js",
    "deploy": "firebase deploy",
    "logs": "firebase functions:log",
    "test": "lint-staged",
    "start": "env NODE_ENV=development webpack-dev-server --config ./config/webpack.config.devserver.js"
  },
  "dependencies": {
    "firebase-admin": "~6.0.0",
    "firebase-functions": "^2.1.0",
    "koa": "^2.6.2",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@types/koa": "^2.0.46",
    "@types/react": "^16.7.2",
    "@types/react-dom": "^16.0.9",
    "@types/react-router": "^4.4.1",
    "@types/react-router-dom": "^4.3.1",
    "ejs-webpack-loader": "^2.2.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "prettier": "1.15.2",
    "ts-loader": "^5.3.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md}": [
      "yarn format",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  }
}
